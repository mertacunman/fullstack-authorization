<div class="container rounded bg-white mt-5 mb-5">
    <form action="/yonetim/profil" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <input type="file" name="avatar"/>
                    <img class="rounded-circle mt-5" width="150px" src="/uploads/<%-user.profilePic %>"></div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-7 py-12">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">Ad</label>
                            <input type="text" name="ad" value="<%- user.ad %>" class="form-control" placeholder="first name">
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Soyad</label>
                            <input type="text" name="soyad" value="<%- user.soyad %>" class="form-control"  placeholder="surname">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Email ID</label>
                            <input type="text" readonly name="email" value="<%- user.email %>" class="form-control" placeholder="enter email id">
                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="submit">Kaydet</button></div>
                </div>
            </div>
        </div>
     </div>
    </form>
